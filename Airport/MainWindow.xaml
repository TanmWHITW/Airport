<Window x:Class="Airport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airport"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Icon="Images/airplane_512.png"
        Title="Airport" Height="600" Width="1200">
    <Border Background="DeepSkyBlue">
        <Grid>
            <Grid.Background>
                <ImageBrush TileMode="Tile" ViewportUnits="Absolute" Viewport="0 0 500 500" ImageSource="/Images/Backgrounds/airport-background-white-40.png" />
        </Grid.Background>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" FontSize="240" Text="87" FontFamily="{StaticResource MontserratBold}" Margin="0 -40"/>
                <TextBlock HorizontalAlignment="Center" FontSize="30" Text="млрд раз" FontFamily="{StaticResource MontserratBold}" />
            </StackPanel>

        </Grid>
    </Border>
</Window>
