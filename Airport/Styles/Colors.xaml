<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Airport">

    <Color x:Key="MainBlue">#00BAFF</Color>
    <SolidColorBrush x:Key="MainBlueBrush" Color="{StaticResource MainBlue}" />

    <Color x:Key="MainBlueDarker">#00aceb</Color>
    <SolidColorBrush x:Key="MainBlueDarkerBrush" Color="{StaticResource MainBlueDarker}" />

    <Color x:Key="MainBlueDark">#008fc4</Color>
    <SolidColorBrush x:Key="MainBlueDarkBrush" Color="{StaticResource MainBlueDark}" />
    
    <Color x:Key="MainYellow">#ffc500</Color>
    <SolidColorBrush x:Key="MainYellowBrush" Color="{StaticResource MainYellow}" />

    <Color x:Key="MainRed">#ff003b</Color>
    <SolidColorBrush x:Key="MainRedBrush" Color="{StaticResource MainRed}" />

    <Color x:Key="ForegroundMain">#fafafa</Color>
    <SolidColorBrush x:Key="ForegroundMainBrush" Color="{StaticResource ForegroundMain}" />
    
    <Color x:Key="ForegroundBlack">#000000</Color>
    <SolidColorBrush x:Key="ForegroundBlackBrush" Color="{StaticResource ForegroundBlack}" />

</ResourceDictionary>